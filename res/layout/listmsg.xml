					          <ImageView
					         android:id="@+id/imagegroup_v"
					         android:layout_width="15dp"
					         android:layout_height="15dp"
					         android:layout_alignParentRight="true"
					          android:layout_below="@id/sender_customize_information_v"
					         android:src="@drawable/ic_action_group"
					         android:layout_marginTop="1dp"
					         android:layout_marginRight="10dp"
					      />
					          <ImageView
					         android:id="@+id/imageaccept_v"
					         android:layout_width="15dp"
					         android:layout_height="15dp"
					         android:layout_toLeftOf="@id/imagegroup_v"
					          android:layout_below="@id/sender_customize_information_v"
					         android:src="@drawable/ic_action_accept"
					         android:layout_marginTop="1dp"
					      />  
					         
								         
								          </RelativeLayout>
								         
								          <TextView
					        android:id="@+id/description_v"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_below="@id/imageBroadcast_v"
					        android:text="maelezo"
					        android:textSize="10sp"
					        android:layout_marginTop="15dp"
					        android:paddingLeft="4dp"
					        android:paddingRight="4dp"
					         android:background="@drawable/border"
					      />
								          
								          <TextView 
								              android:id="@+id/sender_msg_v"
								              android:layout_width="wrap_content"
								              android:layout_height="wrap_content"
								              android:layout_alignParentLeft="true"
								              android:layout_below="@id/description_v"
								              android:textSize="12sp"
								              android:padding="2dp"
								              android:minHeight="2dp"
								              />
								         <TextView 
								              android:id="@+id/sender_date_v"
								              android:layout_width="wrap_content"
								              android:layout_height="wrap_content"
								              android:layout_below="@id/sender_msg_v"
								              android:layout_alignParentRight="true"
								              android:textSize="10sp"
								              android:padding="5dp"
								              android:fontFamily="sans-serif-light"
								              android:maxLines="1"
								              />
								          <TextView 
								              android:id="@+id/sender_time_v"
								              android:layout_width="wrap_content"
								              android:layout_height="wrap_content"
								              android:layout_toLeftOf="@id/sender_date_v"
								              android:layout_below="@id/sender_msg_v"
								              android:textSize="10sp"
								              android:padding="5dp"
								              android:fontFamily="sans-serif-light"
								               android:maxLines="1"
								              />
								    
							          </RelativeLayout>
          
     </LinearLayout>
    
      
      
 
    
</LinearLayout>
