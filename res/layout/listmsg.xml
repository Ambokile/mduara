								              android:padding="1dp"
								              android:layout_below="@id/videoBroadcast_sendername_v" 
								              android:layout_marginLeft="18dp"
								              android:fontFamily="sans-serif-condensed"
								               android:maxLines="2"
								              />
								         
								          <TextView 
								              android:id="@+id/sender_name_v1"
								               android:layout_width="wrap_content"
								              android:layout_height="wrap_content"
								              android:textSize="12sp"
								              android:layout_toRightOf="@+id/videoBroadcast_sendername_v"
								              android:layout_above="@+id/videoBroadcast_sendernameDescription_v"
								              android:layout_marginLeft="12dp"
								              android:textColor="#0000ff"
								              android:textStyle="bold"
								               android:maxLines="2"/>
								          
								          
								           <ImageView
								         android:id="@+id/imagealarm_v"
								         android:layout_width="15dp"
								         android:layout_height="15dp"
								          android:layout_toLeftOf="@id/sender_name_v1"
								          android:layout_below="@id/sender_name_v1"
								         android:src="@drawable/ic_action_video"
								          /> 
								          
								             
					         <TextView 
					              android:id="@+id/sender_customize_information_v"
					              android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_below="@id/videoBroadcast_sendernameDescription_v"
					              android:textSize="12sp"
					              android:paddingTop="5dp"
					              android:paddingLeft="5dp"
					              android:paddingRight="5dp"
					              android:paddingBottom="1dp"
					              android:fontFamily="sans-serif-condensed"
					              android:maxLines="3"
					              android:text="radio number moja in tanzania,tupo ulipo pamoja tunafanya jamii salama"
					              
